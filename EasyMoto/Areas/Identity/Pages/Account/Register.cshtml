@page  
@model RegisterModel
@{
    ViewData["Title"] = "Registar";
}

<h1>@ViewData["Title"]</h1>


<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <input asp-for="Input.Email" value="a.@async.aa" type="hidden" />


    <h2>Criar uma nova conta.</h2>
<div class="row">
        <hr />
    <div class="col-md-6">
        


            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
         </div>
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input asp-for="Input.utilizadores.Nome" class="form-control"/>
                    <label asp-for="Input.utilizadores.Nome"></label>
                    <span asp-validation-for="Input.utilizadores.Nome" class="text-danger"></span>
                </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.utilizadores.Morada" class="form-control" />
                <label asp-for="Input.utilizadores.Morada"></label>
                <span asp-validation-for="Input.utilizadores.Morada" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.utilizadores.CodPostal" class="form-control" />
                <label asp-for="Input.utilizadores.CodPostal"></label>
                <span asp-validation-for="Input.utilizadores.CodPostal" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.utilizadores.Telemovel" class="form-control" />
                <label asp-for="Input.utilizadores.Telemovel"></label>
                <span asp-validation-for="Input.utilizadores.Telemovel" class="text-danger"></span>
            </div>
            <div class="row">
                <hr />
                <div class="col-md-4">
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registar</button>
                </div>
            </div>

            
        </form>
    </div>





